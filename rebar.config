%% -*- mode: erlang -*-
%% rebar3 configuration for envy
%% Fork of shortishly/envy with rebar3 support

{erl_opts, [
    debug_info,
    warnings_as_errors
]}.

{deps, [
    {any, "0.3.2"}
]}.

{project_plugins, [
    rebar3_hex,
    rebar3_ex_doc
]}.

%% Hex package configuration
{hex, [
    {doc, #{provider => ex_doc}},
    {licenses, ["Apache-2.0"]},
    {links, #{
        <<"GitHub">> => <<"https://github.com/macula-io/envy">>,
        <<"Original">> => <<"https://github.com/shortishly/envy">>
    }},
    {description, "Environment variable wrapper prefixing with application name (rebar3 fork)"}
]}.

{ex_doc, [
    {source_url, <<"https://github.com/macula-io/envy">>},
    {main, "README.md"}
]}.
